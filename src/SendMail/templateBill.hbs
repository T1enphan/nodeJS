<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice</title>
    <style>
      body { font-family: Arial, sans-serif; margin: 0; padding: 20px;
      background-color: #f7f7f7; } .invoice-container { max-width: 700px;
      margin: 0 auto; background-color: #fff; padding: 20px; box-shadow: 0 0
      10px rgba(0, 0, 0, 0.1); } .header { text-align: center; margin-bottom:
      20px; } .header h1 { margin: 0; } .invoice-details { margin-bottom: 20px;
      } .invoice-details h3 { margin-bottom: 10px; } table { width: 100%;
      border-collapse: collapse; margin-bottom: 20px; } table, th, td { border:
      1px solid #ddd; } th, td { padding: 10px; text-align: left; } th {
      background-color: #f2f2f2; } .total { text-align: right; padding-right:
      20px; font-weight: bold; } .footer { text-align: center; margin-top: 20px;
      } .footer p { margin: 0; color: #888; }
    </style>
  </head>
  <body>
    <div class="invoice-container">
      <div class="header">
        <h1>Invoice</h1>
        <p>Date: {{date}}</p>
      </div>

      <div class="invoice-details">
        <h3>Billing To:</h3>
        <p>Name: {{customerName}}</p>
        <p>Email: {{customerEmail}}</p>
        <p>Phone: {{customerPhone}}</p>
        <p>Address: {{customerAddress}}</p>
      </div>

      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.quantity}}</td>
              <td>${{this.price}}</td>
              <td>${{this.total}}</td>
            </tr>
          {{/each}}
          <tr>
            <td colspan="3" class="total">Total</td>
            <td>${{grandTotal}}</td>
          </tr>
        </tbody>
      </table>

      <div class="footer">
        <p>Thank you for your purchase!</p>
        <p>If you have any questions, feel free to contact us at
          support@example.com.</p>
      </div>
    </div>
  </body>
</html>